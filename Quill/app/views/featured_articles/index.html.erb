<p id="notice"><%= notice %></p>

<h1>Featured Articles</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @featured_articles.each do |featured_article| %>
      <tr>
        <td><%= featured_article.article %></td>
        <td><%= link_to 'Show', featured_article %></td>
        <td><%= link_to 'Edit', edit_featured_article_path(featured_article) %></td>
        <td><%= link_to 'Destroy', featured_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Featured Article', new_featured_article_path %>
