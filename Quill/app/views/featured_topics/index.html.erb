<p id="notice"><%= notice %></p>

<h1>Featured Topics</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @featured_topics.each do |featured_topic| %>
      <tr>
        <td><%= featured_topic.topic %></td>
        <td><%= link_to 'Show', featured_topic %></td>
        <td><%= link_to 'Edit', edit_featured_topic_path(featured_topic) %></td>
        <td><%= link_to 'Destroy', featured_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Featured Topic', new_featured_topic_path %>
